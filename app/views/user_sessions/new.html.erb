<%= form_with url: login_path, local: true, class: 'form-signin text-center' do |f| %>
<h1>ログイン</h1>
  <div class="form-label-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-label-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-label-group">
    <%= f.submit 'ログイン', class: 'btn btn-primary' %>
  </div>
  <div class='form-label-group'>
  <%= link_to '新規登録の方はこちら', new_user_path %>
  </div>
<% end %>

