          <% @kagawa_temples.each do |temple| %>
            <div class="col-md-4 mb-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= temple.name %></h5>
                  <p class="card-text"><%= temple.address %></p>
