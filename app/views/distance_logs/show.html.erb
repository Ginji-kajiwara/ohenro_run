<div class="container">
  <h1><%= @distance_log.start_time.strftime('%Y年%m月%d日') %></h1>
  <div class="row">
    <div class="col-md-6">
      <strong>走行距離:</strong> <%= @distance_log.distance %> km<br>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-6">
      <%= button_to '削除する', distance_log_path(@distance_log), method: :delete, class: 'btn btn-danger' %>
      <%= link_to '一覧へもどる', distance_logs_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
