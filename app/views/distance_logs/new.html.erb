<%= form_with model: @distance_log do |form| %>
  <div class="form-group">
    <strong>日付:</strong> <%= @distance_log.start_time.strftime('%m月%d日') %>
  </div>
  <div class="form-row mt-3">
    <div class="col-1">
      <%= form.label :"走行距離" %>
    </div>
    <div class="col-1">
      <%= form.text_field :distance, class: 'form-control', placeholder: '0.0', step: '0.1', aria: { label: '走行距離' } %>
      <span class="col-auto">km</span>
    </div>
  </div>
  <%= form.hidden_field :start_time, value: @distance_log.start_time.to_date %>
  <%= form.submit '登録', class: 'btn btn-primary mt-3' %> 
<% end %>
